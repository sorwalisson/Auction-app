<div class="container text-center">
  <div class="row">
    <div class="col">
      <div id="running auctions" class="container-fluid">
        <h3><%= t("running_auction") %></h3>
        <% @auctions.where(status: :running).each do |auction|%>
          <dl>
            <dt><%= AuctionLot.human_attribute_name(:auction_code) %>:</dt>
            <dd><%= link_to auction.auction_code, auction_lot_path(id: auction.id) %></dd>
            <dt><%= AuctionLot.human_attribute_name(:ending_time) %>:</dt>
            <dd><%= auction.ending_time %></dd>
            <dt><%= AuctionLot.human_attribute_name(:highest_bid) %>:</dt>
            <dd><%= if auction.highest_bid.present? then auction.highest_bid end%> <%= if auction.highest_bid.nil? then t(:no_bids_yet) end %></dt>
            <dt><%= Item.model_name.human(:count => 2)%>:</dt>
              <% auction.items.each do |item| %>
                <dd><%= link_to item.name, auction_lot_item_path(auction_lot_id: auction.id, id: item.id) %></dt>
              <%end%>
            <p>____________________________________</p>
          </dl>
        <%end%>
      </div>
    </div>
    <div class="col">
      <div id= "validated" class="container-fluid">
        <h4><%= t('ended_auction')%></h4>
        <% @auctions.where(status: :validated).each do |auction| %>
        <dl>
            <dt><%= AuctionLot.human_attribute_name(:auction_code) %>:</dt>
            <dd><%= link_to auction.auction_code, auction_lot_path(id: auction.id) %></dd>
            <dt><%= AuctionLot.human_attribute_name(:ending_time) %>:</dt>
            <dd><%= auction.ending_time %></dd>
            <dt><%= AuctionLot.human_attribute_name(:winner_bid) %>:</dt>
            <dd><%= if auction.highest_bid.present? then auction.highest_bid end%> <%= if auction.highest_bid.nil? then t(:no_bids_yet) end %></dt>
            <dt><%= Item.model_name.human(:count => 2)%>:</dt>
              <% auction.items.each do |item| %>
                <dd><%= link_to item.name, auction_lot_item_path(auction_lot_id: auction.id, id: item.id) %></dt>
              <%end%>
            <p>____________________________________</p>  
          </dl>
        <%end%>
      </div>
    </div>
    <div class="col">
      <div id="Upcoming Auctions" class="container-fluid">
        <h5><%= t("upcoming_auctions")%></h5>
        <% @auctions.where(status: :confirmed).each do |auction| %>
          <dl>
            <dt><%= AuctionLot.human_attribute_name(:auction_code) %>:</dt>
            <dd><%= link_to auction.auction_code, auction_lot_path(id: auction.id) %></dd>
            <dt><%= AuctionLot.human_attribute_name(:starting_time) %>:</dt>
            <dd><%= auction.starting_time %></dd>
            <dt><%= AuctionLot.human_attribute_name(:ending_time) %>:</dt>
            <dd><%= auction.ending_time %></dd>
            <dt><%= AuctionLot.human_attribute_name(:starting_bid) %>:</dt>
            <dd><%= auction.starting_bid%></dd>
            <dt><%= Item.model_name.human(:count => 2)%>:</dt>
              <% auction.items.each do |item| %>
                <dd><%= link_to item.name, auction_lot_item_path(auction_lot_id: auction.id, id: item.id) %></dd>
              <%end%>
            <p>____________________________________</p>  
          </dl>
        <%end%>
      </div>
    </div>
  </div>
</div>
