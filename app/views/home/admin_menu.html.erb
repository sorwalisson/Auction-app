<h2><%= t('admin_menu.title')%></h2>

<div id ="Sections">
  <div id = "Create Section">
    <p><strong><%= t('admin_menu.create_section.title')%></strong></p>
      <p><%= link_to t("admin_menu.create_section.create_auction"), new_auction_lot_path %></p>
  </div>
  <div id = "draft">
    <p><strong><%= t("admin_menu.draft_section") %></strong></p>
    <% @auctions.where(status: :draft).each do |auction| %>
      <dl>
        <dt><%= AuctionLot.human_attribute_name(:auction_code)%>:</dt>
        <dd><%= link_to auction.auction_code, auction_lot_path(id: auction.id) %></dd>
        <dt><%= AuctionLot.human_attribute_name(:starting_time) %></dt>
        <dd><%= auction.starting_time %></dd>
        <dt><%= AuctionLot.human_attribute_name(:starting_bid)%></dt>
        <dd><%= auction.starting_bid %></dd>
      </dl>
    <%end%>
  </div>
  <div id = "awaiting_confirmation">
    <p><strong><%= t("admin_menu.awaiting_section") %></strong></p>
    <% @auctions.where(status: :awaiting_confirmation).each do |auction| %>
      <dl>
        <dt><%= AuctionLot.human_attribute_name(:auction_code)%>:</dt>
        <dd><%= link_to auction.auction_code, auction_lot_path(id: auction.id) %></dd>
        <dt><%= AuctionLot.human_attribute_name(:starting_time) %></dt>
        <dd><%= auction.starting_time %></dd>
        <dt><%= AuctionLot.human_attribute_name(:starting_bid)%></dt>
        <dd><%= auction.starting_bid %></dd>
      </dl>
    <%end%>
  </div>
</div>
